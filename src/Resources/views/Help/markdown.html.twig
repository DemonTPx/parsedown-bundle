{% macro help(input, output)  %}
<div class="row">
    <div class="col-md-6">
        <pre><code>{{ input }}</code></pre>
    </div>
    <div class="col-md-6">
        {% if output is null %}
            {{ input|markdown }}
        {% else %}
            {{ output }}
        {% endif %}
    </div>
</div>
{% endmacro %}

{% import _self as md %}

<h3>Headers</h3>

{{ md.help('# This is big header
## This is smaller header
###### This is the smallest header') }}

<h3>Emphasis</h3>

{{ md.help('*This text will be italic*
_This will also be italic_

**This text will be bold**
__This will also be bold__

~~This text will be crossed out~~

_You **can** ~~combine~~ them_') }}

