{
    "name": "demontpx/parsedown-bundle",
    "license": "MIT",
    "type": "symfony-bundle",
    "description": "Parsedown (markdown) bundle for Symfony2",
    "keywords": ["markdown", "parsedown", "md", "symfony2", "bundle"],
    "autoload": {
        "psr-4": { "Demontpx\\ParsedownBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Demontpx\\ParsedownBundle\\": "tests/" }
    },
    "require": {
        "php": ">=5.3",
        "symfony/config": "^2.4|^3.0",
        "symfony/http-kernel": "^2.4|^3.0",
        "symfony/dependency-injection": "^2.4|^3.0",
        "twig/twig": "^1.12",
        "erusev/parsedown": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.3"
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.3.x-dev"
        }
    }
}
